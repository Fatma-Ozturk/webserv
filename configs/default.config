http {
    server {
    	server_name default default1;
    	listen 127.0.0.1:8180;

    	location /					
    	{
			error_page 404 ./tests/test1/error404.html;
    		allow_methods GET POST DELETE;
    		root ./tests/test1/;
			index index.html;
		}
    
    	location /virtual/
    	{
    		allow_methods GET POST DELETE;
    		request_max_body_size 42;
    		root ./tests/test2/;
    		index index2.html;
			return 301 http://google.com;
    	}
    }
    
    server
    {
    	server_name second;
    	listen 127.0.0.1:8181;
    
    	location /
    	{
    		allow_methods GET;
    		root ./tests/test1/;
    		index index.html;
			cgi_pass /opt/homebrew/bin/php-cgi;
		}
		
    	location /abc/
    	{
    		allow_methods GET;
    		index second.html;
    	}
    }
    
    server
    {
    	server_name google.com;
    	listen 127.0.0.1:8282;
    
    	location /
    	{
    		allow_methods GET POST DELETE;
    		root Website_to_test/;
			index other.php;
			auto_index on;
			cgi_pass Website_to_test/cgi_tester;
		}
    }
}
